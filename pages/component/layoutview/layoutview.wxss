/* pages/layoutview/layoutview.wxss */
@import '../../../common/layout.wxss';

.item {
  width: 80px;
  height: 50px;
  margin: 5px;
}

.marginTop {
  margin-top:10px;
}

.textStyle {
  font-size: 20px; /*设置文字字号*/
  color: red; /*设置文字颜色*/
  font-weight: bold; /*设置字体加粗*/
  font-family: "宋体";
}

.italicAndUnderLine {
  font-style: italic; /*文字排版--斜体*/
  text-decoration: underline; /*文字排版--下划线*/
}

.line_through {
  text-decoration: line-through;
}

.textOtherSetting {
  text-indent: 2em; /*段落排版--缩进*/
  line-height: 1em; /*段落排版--行间距（行高）*/
  letter-spacing: 10px; /*段落排版--中文字间距*/
  word-spacing: 5px; /*字母间距*/
  text-align: left; /*段落排版--对齐*/
}
